# standard Onyx treatment of Python code
Import('env')
env.DocBuildThisPackage('Textdata')
env.PyFile('__init__.py')
env.PyFile('tdutil.py')
env.PyFile('yamldata.py')
env.PyFile('onyxtext.py')
env.PyFile('textdata.py', logref = 'textdata.log-ref')
env.PyFile('textfileprocess.py', 
            doctest_files = ('foo.txt', 'bar.txt', 'baz.txt'))
